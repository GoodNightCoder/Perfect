<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rc_tl30_tr30"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:id="@+id/plan_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/plan_cancel_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_btn_rc_8"
            android:contentDescription="@string/cancel_img_desc"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="?attr/colorOnSurface" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/plan_cancel_img"
            android:layout_alignBottom="@+id/plan_cancel_img"
            android:layout_toStartOf="@id/plan_confirm_img"
            android:layout_toEndOf="@id/plan_cancel_img"
            android:gravity="center"
            android:text="@string/plan_activity_title"
            android:textAppearance="@style/TextAppearance.Perfect.DialogTitle" />

        <ImageView
            android:id="@+id/plan_confirm_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_btn_rc_8"
            android:contentDescription="@string/confirm_img_desc"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_check_24"
            app:tint="?attr/colorOnSurface" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/plan_content_et"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:hint="@string/plan_content_hint"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.Perfect.DialogContent" />

            <View
                android:id="@+id/plan_content_target_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/plan_content_et"
                android:background="@color/gray" />


            <TextView
                android:id="@+id/plan_target_title_tv"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/plan_target_stepper"
                android:layout_alignBottom="@id/plan_target_stepper"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/plan_target_stepper"
                android:gravity="center_vertical"
                android:text="@string/plan_target_num"
                android:textAppearance="@style/TextAppearance.Perfect.DialogContent" />

            <LinearLayout
                android:id="@+id/plan_target_stepper"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_below="@id/plan_content_target_divider"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_stepper"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/plan_stepper_minus_img"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn_rc_tl8_bl8"
                    android:padding="4dp"
                    android:src="@drawable/ic_baseline_remove_24" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/plan_target_stepper_value_tv"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_btn"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.Perfect.DialogContent" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray" />

                <ImageView
                    android:id="@+id/plan_stepper_plus_img"
                    android:layout_width="32dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/bg_btn_rc_tr8_br8"
                    android:padding="4dp"
                    android:src="@drawable/ic_baseline_add_22" />
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</LinearLayout>