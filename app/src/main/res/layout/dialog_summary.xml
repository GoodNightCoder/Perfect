<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_rc_tl30_tr30"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/summary_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp">

        <ImageView
            android:id="@+id/summary_cancel_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_btn_rc_8"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="?attr/colorOnSurface"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/summary_cancel_iv"
            android:layout_alignBottom="@+id/summary_cancel_iv"
            android:layout_toStartOf="@id/summary_confirm_iv"
            android:layout_toEndOf="@id/summary_cancel_iv"
            android:gravity="center"
            android:text="@string/summary_dialog_title"
            android:textAppearance="@style/TextAppearance.Perfect.DialogTitle" />

        <ImageView
            android:id="@+id/summary_confirm_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_btn_rc_8"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_check_24"
            app:tint="?attr/colorOnSurface"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="40dp"
            android:paddingVertical="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/summary_thumb_up_iv1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_thumb_up_24" />

                <ImageView
                    android:id="@+id/summary_thumb_up_iv2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_thumb_up_24" />

                <ImageView
                    android:id="@+id/summary_thumb_up_iv3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_thumb_up_24" />

                <ImageView
                    android:id="@+id/summary_thumb_up_iv4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_thumb_up_24" />

                <ImageView
                    android:id="@+id/summary_thumb_up_iv5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_baseline_thumb_up_24" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/summary_rating_tip"
                android:textAppearance="@style/TextAppearance.Perfect.DialogContentTooltip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="15dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/summary_review_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/summary_review_hint"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.Perfect.DialogContent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginVertical="15dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/summary_memo_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@null"
                android:hint="@string/summary_memo_hint"
                android:inputType="textMultiLine"
                android:textAppearance="@style/TextAppearance.Perfect.DialogContent" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>