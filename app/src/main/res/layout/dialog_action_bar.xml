<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialog_action_bar_cancel_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg_btn_rc_8"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_close_24"
        app:tint="?attr/colorOnSurface"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/dialog_action_bar_title_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/dialog_action_bar_cancel_iv"
        android:layout_alignBottom="@+id/dialog_action_bar_cancel_iv"
        android:layout_toStartOf="@id/dialog_action_bar_confirm_iv"
        android:layout_toEndOf="@id/dialog_action_bar_cancel_iv"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Perfect.DialogTitle" />

    <ImageView
        android:id="@+id/dialog_action_bar_confirm_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_btn_rc_8"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_check_24"
        app:tint="?attr/colorOnSurface"
        tools:ignore="ContentDescription" />
</RelativeLayout>