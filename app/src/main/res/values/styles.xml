<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultCountableRadioButton">
        <item name="solidCircleColor">@color/purple_a50</item>
        <item name="hollowCircleArcWidth">3px</item>
        <item name="hollowCircleColor">@color/gray</item>
        <item name="textSize">15sp</item>
        <item name="textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="DefaultWheelPicker">
        <item name="itemTextColor">?android:attr/textColorPrimary</item>
        <item name="selectedItemTextColor">?attr/colorPrimary</item>
        <item name="indicatorTextColor">?attr/colorPrimary</item>
        <item name="selectedItemDividerColor">@color/gray</item>
        <item name="itemTextSize">14sp</item>
        <item name="selectedItemTextSize">18sp</item>
        <item name="indicatorTextSize">16sp</item>
        <item name="selectedItemTextStrokeWidth">0.8</item>
        <item name="selectedItemLetterSpacing">0.008</item>
        <item name="itemHeightSpace">16dp</item>
        <item name="itemWidthSpace">32dp</item>
    </style>

    <style name="DefaultCircularProgressView">
        <item name="bgArcColor">@color/focus_bg_arc_color</item>
        <item name="fgArcColor">@color/focus_fg_arc_color</item>
        <item name="bgArcWidth">7dp</item>
        <item name="fgArcWidth">7dp</item>
    </style>

    <style name="DefaultScheduleLayout">
        <item name="fgColor">?android:attr/textColorSecondary</item>
        <item name="curTimeLineColor">@color/red</item>
        <item name="curTimeLineWidth">2px</item>
        <item name="lineWidth">1px</item>
        <item name="timeTextSize">12sp</item>
    </style>

    <style name="Widget.Perfect.FocusExitButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/focus_exit_btn_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">100dp</item>
        <item name="rippleColor">@color/color_focus_exit_btn_ripple</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/focus_exit_btn_color</item>
        <item name="android:textAppearance">@style/TextAppearance.Perfect.FocusExitButton</item>
    </style>

    <!-- 对话框样式 -->
    <style name="NoAnimDialog" parent="Theme.Perfect">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.32</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="SlideBottomAnimDialog" parent="NoAnimDialog">
        <item name="android:windowAnimationStyle">@style/Animation_DialogSlideBottom</item>
    </style>

    <style name="FadeAnimDialog" parent="NoAnimDialog">
        <item name="android:windowAnimationStyle">@style/Animation_DialogFade</item>
    </style>

    <!-- 动画 -->

    <!-- 对话框底部进出动画 -->
    <style name="Animation_DialogSlideBottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- 对话框淡入淡出动画 -->
    <style name="Animation_DialogFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- FocusActivity淡入淡出动画 -->
    <style name="Animation_ActivityFade" parent="android:Animation.Activity">
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
    </style>

    <!-- 以下是应用中各种文本样式 -->

    <!-- 活动标题(SettingsActivity用到) -->
    <style name="TextAppearance.Perfect.ActivityTitle" parent="TextAppearance.MaterialComponents.Headline6" />

    <!-- 对话框按钮文本 -->
    <style name="TextAppearance.Perfect.DialogButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.008</item>
    </style>

    <!-- 对话框标题 -->
    <style name="TextAppearance.Perfect.DialogTitle" parent="TextAppearance.MaterialComponents.Headline6" />

    <!-- 对话框主要内容 -->
    <style name="TextAppearance.Perfect.DialogContent" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 对话框次要内容 -->
    <style name="TextAppearance.Perfect.DialogContentSecondary" parent="TextAppearance.Perfect.DialogContent">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- 用于Summary对话框评分提示文字 -->
    <style name="TextAppearance.Perfect.DialogContentTooltip" parent="TextAppearance.Perfect.DialogContentSecondary">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- 主页日期 -->
    <style name="TextAppearance.Perfect.HomepageDate" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 主页卡片大标题 -->
    <style name="TextAppearance.Perfect.HomepageHeader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 主页卡片内的小标题 -->
    <style name="TextAppearance.Perfect.HomepageTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 主页卡片内的普通文本 -->
    <style name="TextAppearance.Perfect.HomepageBody" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 专注倒计时 -->
    <style name="TextAppearance.Perfect.FocusTime" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/focus_time_text_color</item>
        <item name="android:textSize">48sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- 横屏时专注倒计时 -->
    <style name="TextAppearance.Perfect.FocusTime.Land" parent="TextAppearance.Perfect.FocusTime">
        <item name="android:textSize">80sp</item>
    </style>

    <!-- 专注状态 -->
    <style name="TextAppearance.Perfect.FocusState" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/focus_state_text_color</item>
    </style>

    <!-- 专注模式退出按钮 -->
    <style name="TextAppearance.Perfect.FocusExitButton" parent="TextAppearance.MaterialComponents.Subtitle1">
        <!-- 在此指定按钮文字的颜色无效，只能在Style中用android:textColor指定，原因未知 -->
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
    </style>

</resources>