<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/focus_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/focus_bg_color"
    android:clickable="true"
    tools:context=".ui.FocusActivity">

    <TextView
        android:id="@+id/focus_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/focus_time_tv"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.Perfect.FocusState" />

    <com.cyberlight.perfect.widget.CircularProgressView
        android:id="@+id/focus_cpv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:bgArcColor="@color/focus_bg_arc_color"
        app:bgArcWidth="9dp"
        app:fgArcColor="@color/focus_fg_arc_color"
        app:fgArcWidth="9dp" />

    <TextView
        android:id="@+id/focus_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="@style/TextAppearance.Perfect.FocusTime.Land" />

    <Button
        android:id="@+id/focus_exit_btn"
        style="@style/Widget.Perfect.FocusExitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/focus_time_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/focus_exit_btn_text" />

</RelativeLayout>

